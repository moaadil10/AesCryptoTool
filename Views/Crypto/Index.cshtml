@model AesCryptoTool.Models.CryptoViewModel
@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">AES Encryption & Decryption Tool</h2>

    <!-- Default Key -->
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <div>
            <strong>Default Key:</strong>
            <span id="defaultKey">@Model.DefaultKey</span>
        </div>
        <button type="button" class="btn btn-sm btn-outline-primary"
                onclick="copyField('defaultKey')">
            Copy
        </button>
    </div>

    <div class="row">
        <!-- 🔐 ENCRYPT -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">Encryption</div>
                <div class="card-body">

                    <form method="post" action="/Crypto/Encrypt">
                        <div class="mb-3">
                            <label>Text</label>
                            <textarea name="PlainText" class="form-control">@Model.PlainText</textarea>
                        </div>

                        <div class="mb-3">
                            <label>Key</label>
                            <div class="input-group">
                                <input id="encryptKey" name="Key" class="form-control" value="@Model.Key" />
                                <button type="button" class="btn btn-outline-secondary"
                                        onclick="copyField('encryptKey')">
                                    Copy
                                </button>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Encrypt</button>

                        @if (!string.IsNullOrEmpty(Model.EncryptedText))
                        {
                            <div class="mt-3">
                                <label>Encrypted Text</label>
                                <div class="input-group">
                                    <textarea id="encryptedOutput" class="form-control" readonly>@Model.EncryptedText</textarea>
                                    <button type="button" class="btn btn-outline-secondary"
                                            onclick="copyField('encryptedOutput')">
                                        Copy
                                    </button>
                                </div>
                            </div>
                        }
                    </form>

                </div>
            </div>
        </div>

        <!-- 🔓 DECRYPT -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">Decryption</div>
                <div class="card-body">

                    <form method="post" action="/Crypto/Decrypt">
                        <div class="mb-3">
                            <label>Cipher</label>
                            <textarea name="CipherText" class="form-control">@Model.CipherText</textarea>
                        </div>

                        <div class="mb-3">
                            <label>Key</label>
                            <div class="input-group">
                                <input id="decryptKey" name="Key" class="form-control" value="@Model.Key" />
                                <button type="button" class="btn btn-outline-secondary"
                                        onclick="copyField('decryptKey')">
                                    Copy
                                </button>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Decrypt</button>

                        @if (!string.IsNullOrEmpty(Model.DecryptedText))
                        {
                            <div class="mt-3">
                                <label>Decrypted Text</label>
                                <div class="input-group">
                                    <textarea id="decryptedOutput" class="form-control" readonly>@Model.DecryptedText</textarea>
                                    <button type="button" class="btn btn-outline-secondary"
                                            onclick="copyField('decryptedOutput')">
                                        Copy
                                    </button>
                                </div>
                            </div>
                        }
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyField(id) {
        const element = document.getElementById(id);
        const text = element.value || element.innerText;
        navigator.clipboard.writeText(text);
        alert("Copied!");
    }
</script>
